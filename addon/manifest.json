{
  "name": "Smart Battery Charger",
  "version": "1.0.0",
  "slug": "smart_battery_charger",
  "description": "Optimizes battery charging using solar and Tibber price forecasts",
  "startup": "services",
  "boot": "auto",
  "arch": ["amd64", "armv7", "arm64", "i386"],
  "host_network": true,
  "map": ["config:ro", "ssl"],
  "options": {
    "latitude": 52.0,
    "longitude": 4.3,
    "forecast_days": 2,
    "tibber_token": "",
    "battery_entities": ["sensor.battery1_soc", "sensor.battery2_soc"],
    "envoy_entity": "sensor.envoy_power",
    "solar_panel_entity": "sensor.envoy_production",
    "night_start": "22:00",
    "night_end": "06:00"
  },
  "schema": {
    "latitude": "float",
    "longitude": "float",
    "forecast_days": "int",
    "tibber_token": "str",
    "battery_entities": ["str"],
    "envoy_entity": "str",
    "solar_panel_entity": "str",
    "night_start": "str",
    "night_end": "str"
  }
}
